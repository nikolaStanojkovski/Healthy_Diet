@model HealthyDiet.Domain.Identity.UserLoginDto

@{
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <title>Login - Healthy Diet</title>

    <!--    Bootstrap CSS Import   -->
    <link rel="stylesheet" href="~/custom/css/bootstrap.css" />

    <!--    Font Awesome CSS Import   -->
    <link rel="stylesheet" href="~/custom/fontawesome/css/all.css">

    <!--    Bootstrap JS Imports   -->
    <script src="~/custom/js/bootstrap.js"></script>
</head>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img class="rounded" height="40" width="200" src="~/custom/img/logo/initials.png" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 ml-2">
                    <li class="nav-item mx-1">
                        <a class="nav-link font-weight-bold" style="color: #89c540; font-size: 18px;" asp-area="" asp-controller="Recipes" asp-action="Index">Recipes</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link font-weight-bold" style="color: #89c540; font-size: 18px;" asp-area="" asp-controller="CalorieCounter" asp-action="Index">Calorie Counter</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link font-weight-bold" style="color: #89c540; font-size: 18px;" asp-area="" asp-controller="DietPlans" asp-action="Index">Diet Plans</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>

<body style="background-color: #89c540;">

    <div class="container">
        @Html.ValidationSummary()
        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="container px-5 my-5 py-5 bg-light align-items-center" style="border-radius: 10px;">

                <div class="row mb-4">
                    <div class="col text-center" style="color: #89c540;">
                        <h1 class="lead display-4 font-weight-light">Login</h1>
                    </div>
                </div>

                <div class="form-group col-12">
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>

                <div class="form-group col-12">
                    <div>
                        @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>

                <br />
                <div class="form-group col-12">
                    <button type="submit" class="btn btn-success btn-block" style="font-size: 25px;">Sign In</button>
                </div>

                <div class="text-center form-group col-12 mb-4">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-info btn-block">Sign Up</a>
                </div>

                <hr class="text-info w-25" />

                <div class="col-12 text-center mt-4 pb-3">

                    <!-- Facebook -->
                    <a class="btn btn-outline-dark m-1" href="#" role="button">
                        <i class="fab fa-facebook-f"></i>
                    </a>

                    <!-- Twitter -->
                    <a class="btn btn-outline-dark mx-1" href="#" role="button">
                        <i class="fab fa-twitter"></i>
                    </a>

                    <!-- Google -->
                    <a class="btn btn-outline-dark mx-1" href="#" role="button">
                        <i class="fab fa-google"></i>
                    </a>

                    <!-- Instagram -->
                    <a class="btn btn-outline-dark mx-1" href="#" role="button">
                        <i class="fab fa-instagram"></i>
                    </a>

                    <!-- Linkedin -->
                    <a class="btn btn-outline-dark mx-1" href="#" role="button">
                        <i class="fab fa-pinterest"></i>
                    </a>
                </div>
            </div>
        </form>

    </div>
</body>